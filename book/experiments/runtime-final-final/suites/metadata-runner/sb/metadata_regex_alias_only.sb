(version 1)

(deny default)

;; Regex anchors for alias paths
(allow file-read* (regex "^/tmp(/|$)"))
(allow file-read* (regex "^/var/tmp/canon(/|$)?"))
(allow file-read-metadata (regex "^/tmp(/|$)"))
(allow file-read-metadata (regex "^/var/tmp/canon(/|$)?"))
(allow file-write* (regex "^/tmp(/|$)"))
(allow file-write* (regex "^/var/tmp/canon(/|$)?"))
