(version 1)

(deny default)

;; Allow symlink metadata on the /var component (symlink object traversal).
(allow file-read-metadata (literal "/var"))

;; Allow reads/writes for both /var/tmp/vfs_canon_probe and /private/var/tmp/vfs_canon_probe.
(allow file-read* (literal "/var/tmp/vfs_canon_probe"))
(allow file-read* (literal "/private/var/tmp/vfs_canon_probe"))
(allow file-write* (literal "/var/tmp/vfs_canon_probe"))
(allow file-write* (literal "/private/var/tmp/vfs_canon_probe"))

